{
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "cmake/arm-gcc-toolchain.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS" : true
    },
    "C_Cpp.intelliSenseEngine" : "default",
    "C_Cpp.default.intelliSenseMode" : "gcc-arm",
    
    "C_Cpp.files.exclude": {
        "kicad/**": true,
        "solidworks/**": true,
        "CubeMX/EWARM/**": true,
        "version.h.in": true,
    },
    "search.exclude": {
        "kicad/**": true,
        "solidworks/**": true,
        "CubeMX/EWARM/**": true,
    },
    "files.exclude": {
        "kicad/**": true,
        "solidworks/**": true,
        "CubeMX/EWARM/**": true,
    },
    "files.watcherExclude": {
        "kicad/**": true,
        "solidworks/**": true,
        "CubeMX/EWARM/**": true,
    },

    "cortex-debug.armToolchainPrefix": "arm-none-eabi",

    "cortex-debug.openocdPath.osx": "/usr/local/bin/openocd",
    "cortex-debug.armToolchainPath.osx": "/opt/homebrew/bin/",

    "cortex-debug.openocdPath.linux": "/usr/local/bin/openocd",
    "cortex-debug.armToolchainPath.linux": "/usr/local/bin/",

    "C_Cpp.clang_format_fallbackStyle":"Google",
    "cmake.outputLogEncoding": "utf8",
    "cmake.configureOnOpen": true,
    "files.associations": {
        "*.h": "cpp",
        "*.cpp": "cpp",
        "*.c": "c",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "random": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "initializer_list": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "ostream": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "cinttypes": "cpp",
        "typeinfo": "cpp",
        "list": "cpp",
        "unordered_set": "cpp",
        "optional": "cpp",
        "ratio": "cpp",
        "regex": "cpp",
        "variant": "cpp",
        "bitset": "cpp",
        "charconv": "cpp",
        "chrono": "cpp",
        "condition_variable": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "map": "cpp",
        "set": "cpp",
        "source_location": "cpp",
        "fstream": "cpp",
        "future": "cpp",
        "iomanip": "cpp",
        "iostream": "cpp",
        "mutex": "cpp",
        "ranges": "cpp",
        "semaphore": "cpp",
        "span": "cpp",
        "stop_token": "cpp",
        "thread": "cpp",
        "format": "cpp",
        "version": "cpp",
        "__string": "cpp",
        "text_encoding": "cpp"
    },
    "editor.fontFamily": "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    "editor.fontSize": 12,
}